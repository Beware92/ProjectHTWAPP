<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StundenPlanActivity" >

    <TextView
        android:id="@+id/textStundenplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStundenplan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="208dp"
        android:text="@string/stundenplan"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/buttonNotenauskunft"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_alignLeft="@+id/buttonMensa"
        android:layout_alignTop="@+id/buttonAbout"
        android:background="@drawable/notenauskunft"
        android:contentDescription="@string/notenauskunft" />

    <ImageButton
        android:id="@+id/buttonStundenplan"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_alignLeft="@+id/textGebaeudeplan"
        android:layout_alignTop="@+id/buttonNotenauskunft"
        android:background="@drawable/stundenplan"
        android:contentDescription="@string/stundenplan" />

    <TextView
        android:id="@+id/textGebaeudeplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGebaeudeplan"
        android:layout_centerVertical="true"
        android:text="@string/gebaeudeplan"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/buttonGebaeudeplan"
        style="@style/AppTheme"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_above="@+id/textGebaeudeplan"
        android:layout_alignLeft="@+id/imageHTW"
        android:layout_marginLeft="53dp"
        android:background="@drawable/gebaeudeplan"
        android:contentDescription="@string/gebaeudeplan" />

    <TextView
        android:id="@+id/textMensa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/mensa"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/buttonMensa"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_above="@+id/textMensa"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mensa"
        android:contentDescription="@string/mensa" />

    <ImageButton
        android:id="@+id/buttonAbout"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_above="@+id/textAbout"
        android:layout_alignRight="@+id/textNews"
        android:background="@drawable/about"
        android:contentDescription="@string/about" />

    <TextView
        android:id="@+id/textNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonNews"
        android:layout_below="@+id/buttonMensa"
        android:text="@string/news"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <ImageButton
        android:id="@+id/buttonNews"
        android:layout_width="@dimen/activity_main_button_xlarge"
        android:layout_height="@dimen/activity_main_button_xlarge"
        android:layout_above="@+id/textNews"
        android:layout_alignRight="@+id/imageHTW"
        android:layout_marginRight="45dp"
        android:background="@drawable/news"
        android:contentDescription="@string/news" />

    <TextView
        android:id="@+id/textNotenauskunft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textStundenplan"
        android:layout_alignBottom="@+id/textStundenplan"
        android:layout_centerHorizontal="true"
        android:text="@string/notenauskunft"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textNotenauskunft"
        android:layout_alignBottom="@+id/textNotenauskunft"
        android:layout_alignRight="@+id/buttonAbout"
        android:gravity="center"
        android:text="@string/about"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/imageHTW"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:contentDescription="@string/htw_logo"
        android:src="@drawable/htw_logo" />

</RelativeLayout>