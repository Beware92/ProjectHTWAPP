<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/imageHTW"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:contentDescription="@string/htw_logo"
    android:src="@drawable/htw_logo" />

<ImageButton
    android:id="@+id/ibtnIngwi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageHTW"
    android:layout_centerHorizontal="true"
    android:background="@drawable/ingwi"
    android:src="@drawable/ingwi" />

<ImageButton
    android:id="@+id/ibtnAuB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/ibtnSowi"
    android:layout_below="@+id/ibtnIngwi"
    android:background="@drawable/aub"
    android:src="@drawable/aub" />

<ImageButton
    android:id="@+id/ibtnSowi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ibtnAuB"
    android:layout_centerHorizontal="true"
    android:background="@drawable/sowi"
    android:src="@drawable/sowi" />

</RelativeLayout>
